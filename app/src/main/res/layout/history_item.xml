<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/history_item_created_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_item_create_date_text"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Дата:" />

            <TextView
                android:id="@+id/history_item_created_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="01.01.2021" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/history_item_created_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_item_create_time_text"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Время:" />

            <TextView
                android:id="@+id/history_item_created_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="17:44" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
