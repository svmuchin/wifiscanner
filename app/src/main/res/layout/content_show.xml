<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.activity.ShowActivity"
    tools:showIn="@layout/activity_show">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/show_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/show_guideline_bottom"
        />

    <Button
        android:id="@+id/show_button_send"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@color/bg_green"
        android:textColor="@color/white"
        android:text="@string/show_button_send_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_guideline_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="678dp" />

    <android.support.constraint.Guideline
        android:id="@+id/show_guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="?attr/actionBarSize" />

</android.support.constraint.ConstraintLayout>